{
  "name": "loomtype",
  "version": "0.1.0",
  "description": "Verify AI implemented your requirements",
  "author": "rivendare",
  "license": "MIT",
  "homepage": "https://github.com/rivendare/loomtype#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rivendare/loomtype.git"
  },
  "bugs": {
    "url": "https://github.com/rivendare/loomtype/issues"
  },
  "type": "module",
  "main": "bin/index.js",
  "bin": {
    "loomtype": "bin/cli.js"
  },
  "files": [
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p .",
    "postbuild": "node -e \"if (process.platform !== 'win32') require('fs').chmodSync('bin/cli.js', '755')\"",
    "watch": "tsc -p . --watch",
    "clean": "rm -rf bin",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "ai",
    "ai-development",
    "patterns",
    "specifications",
    "verification",
    "development",
    "cli",
    "developer-tools"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
